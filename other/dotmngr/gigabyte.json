{
	"global": {
		"mode": "hardlink",
		"trash": true,
		"trashDir": "%USERPROFILE%\\Trash\\dotmngr"
	},
	"packages": {
		"pwsh": {
			"enabled": true,
			"items": [
				{
					"from": "%USERPROFILE%\\Git\\dotfiles\\shell\\powershell\\Microsoft.PowerShell_profile.ps1",
					"to": "%USERPROFILE%\\Documents\\PowerShell\\Microsoft.PowerShell_profile.ps1"
				},
				{
					"from": "%USERPROFILE%\\Git\\dotfiles\\shell\\powershell\\Microsoft.PowerShell_profile.ps1",
					"to": "%USERPROFILE%\\Documents\\PowerShell\\Microsoft.VSCode_profile.ps1"
				}
			]
		},
		"firefox": {
			"enabled": true,
			"items": [
				{
					"from": "%USERPROFILE%\\Git\\dotfiles\\browser\\firefox\\policies.json",
					"to": "C:\\Program Files\\Mozilla Firefox\\distribution\\policies.json"
				},
				{
					"from": "%USERPROFILE%\\Git\\dotfiles\\browser\\firefox\\user.js",
					"to": "%APPDATA%\\Mozilla\\Firefox\\Profiles\\ohjjmxud.Personal\\user.js"
				},
				{
					"mode": "junction",
					"from": "%USERPROFILE%\\gitpkgs\\github.com__Lockframe__Firefox-WinUI\\chrome",
					"to": "%APPDATA%\\Mozilla\\Firefox\\Profiles\\ohjjmxud.Personal\\chrome"
				}
			]
		},
		"autohotkey": {
			"enabled": true,
			"mode": "shortcut",
			"items": [
				{
					"from": "%USERPROFILE%\\Git\\dotfiles\\ahk\\main.ahk",
					"to": "%APPDATA%\\Microsoft\\Windows\\Start Menu\\Programs\\Startup\\autohotkey.lnk"
				}
			]
		},
		"flowlauncher": {
			"enabled": true,
			"mode": "junction",
			"items": [
				{
					"from": "%USERPROFILE%\\Configs\\FlowLauncher\\Plugins",
					"to": "%APPDATA%\\FlowLauncher\\Plugins"
				},
				{
					"from": "%USERPROFILE%\\Configs\\FlowLauncher\\Settings",
					"to": "%APPDATA%\\FlowLauncher\\Settings"
				}
			]
		},
		"quicklook": {
			"enabled": true,
			"mode": "junction",
			"items": [
				{
					"from": "%USERPROFILE%\\Configs\\QuickLook\\UserData",
					"to": "%USERPROFILE%\\scoop\\persist\\quicklook\\UserData"
				}
			]
		},
		"mpv": {
			"enabled": true,
			"items": [
				{
					"from": "%USERPROFILE%\\gitpkgs\\github.com__Samillion__ModernZ\\modernz.lua",
					"to": "%USERPROFILE%\\scoop\\persist\\mpv-git\\portable_config\\scripts\\modernz.lua"
				},
				{
					"from": "%USERPROFILE%\\gitpkgs\\github.com__Samillion__ModernZ\\fluent-system-icons.ttf",
					"to": "%USERPROFILE%\\scoop\\persist\\mpv-git\\portable_config\\fonts\\fluent-system-icons.ttf"
				},
				{
					"from": "%USERPROFILE%\\gitpkgs\\github.com__po5__thumbfast\\thumbfast.lua",
					"to": "%USERPROFILE%\\scoop\\persist\\mpv-git\\portable_config\\scripts\\thumbfast.lua"
				},
				{
					"from": "%USERPROFILE%\\gitpkgs\\github.com__fahim-ahmed05__mpv-autosub\\autosub.lua",
					"to": "%USERPROFILE%\\scoop\\persist\\mpv-git\\portable_config\\scripts\\autosub.lua"
				},
				{
					"from": "%USERPROFILE%\\Git\\dotfiles\\other\\mpv\\input.conf",
					"to": "%USERPROFILE%\\scoop\\persist\\mpv-git\\portable_config\\input.conf"
				},
				{
					"from": "%USERPROFILE%\\Git\\dotfiles\\other\\mpv\\mpv.conf",
					"to": "%USERPROFILE%\\scoop\\persist\\mpv-git\\portable_config\\mpv.conf"
				},
				{
					"from": "%USERPROFILE%\\Git\\dotfiles\\other\\mpv\\script-opts\\autosub.conf",
					"to": "%USERPROFILE%\\scoop\\persist\\mpv-git\\portable_config\\script-opts\\autosub.conf"
				},
				{
					"from": "%USERPROFILE%\\Git\\dotfiles\\other\\mpv\\script-opts\\thumbfast.conf",
					"to": "%USERPROFILE%\\scoop\\persist\\mpv-git\\portable_config\\script-opts\\thumbfast.conf"
				},
				{
					"from": "%USERPROFILE%\\Git\\dotfiles\\other\\mpv\\script-opts\\modernz.conf",
					"to": "%USERPROFILE%\\scoop\\persist\\mpv-git\\portable_config\\script-opts\\modernz.conf"
				}
			]
		}
	}
}