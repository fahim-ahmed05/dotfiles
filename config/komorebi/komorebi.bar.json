{
  "$schema": "https://raw.githubusercontent.com/LGUG2Z/komorebi/v0.1.37/schema.bar.json",
  "monitor": 0,
  "font_family": "JetBrainsMono NF",
  "height": 32,
  "theme": {
    "palette": "Base16",
    "name": "Ashes",
    "accent": "Base0D"
  },
  "left_widgets": [
    {
      "Komorebi": {
        "focused_window": {
          "enable": true,
          "show_icon": true
        }
      }
    }
  ],
  "center_widgets": [
    {
      "Komorebi": {
        "workspaces": {
          "enable": true,
          "display":"AllIconsAndText",
          "hide_empty_workspaces": false
        },
        "layout": {
          "enable": true
        }
      }
    }
  ],
  "right_widgets": [
    {
      "Media": {
        "enable": true
      }
    }
  ]
}