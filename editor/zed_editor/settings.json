{
  "auto_install_extensions": {
    "biome": true
  },
  "auto_update": false,
  "restore_on_startup": "last_session",
  "autosave": {
    "after_delay": {
      "milliseconds": 1000
    }
  },
  "soft_wrap": "editor_width",
  "base_keymap": "VSCode",
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  "ui_font_family": "Inter",
  "ui_font_size": 16,
  "buffer_font_family": "JetBrainsMono Nerd Font",
  "buffer_font_features": {
    "calt": true
  },
  "buffer_font_size": 14,
  "theme": {
    "mode": "system",
    "light": "One Light",
    "dark": "One Dark"
  },
  "disable_ai": true,
  "collaboration_panel": {
    "button": false
  },
  "title_bar": {
    "show_sign_in": false,
    "show_onboarding_banner": false,
    "show_user_picture": false
  }
}
